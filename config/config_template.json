{
  "project_info": {
    "name": "Guardian EPI",
    "version": "1.0.0",
    "description": "Sistema de Monitoramento de Segurança e Qualidade com IA"
  },

  "monitor_epi": {
    "model_path": "models/keras_model.h5",
    "labels_path": "models/labels.txt",
    "confidence_threshold": 0.7,
    "image_size": 224,
    "logs_directory": "logs"
  },

  "controle_uniforme": {
    "model_path": "models/uniforme_model.h5",
    "labels_path": "models/uniforme_labels.txt",
    "confidence_threshold": 0.75,
    "image_size": 224,
    "logs_directory": "logs/controle_qualidade"
  },

  "detector_objetos": {
    "model_path": "models/objeto_model.h5",
    "labels_path": "models/objeto_labels.txt",
    "confidence_threshold": 0.80,
    "image_size": 224,
    "frame_rate": 10,
    "logs_directory": "logs/deteccao_objetos"
  },

  "email_config": {
    "smtp_server": "smtp.gmail.com",
    "smtp_port": 587,
    "sender_email": "sistema@empresa.com",
    "recipient_email": "supervisor.area@empresa.com",
    "use_tls": true,
    "note": "IMPORTANTE: Não armazene senhas aqui! Use variáveis de ambiente ou arquivo .env"
  },

  "camera_config": {
    "default_camera_id": 0,
    "resolution_width": 1920,
    "resolution_height": 1080,
    "fps": 30
  },

  "alerts": {
    "enable_email": true,
    "enable_sound": false,
    "enable_visual": true,
    "sound_file": "assets/alert.wav"
  },

  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(levelname)s - %(message)s",
    "save_images": true,
    "max_log_files": 30
  }
}
